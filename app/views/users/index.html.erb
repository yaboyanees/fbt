<% if can? :manage, :all %>
 <title>Edit Users Index Page</title>
<h3>All Users</h3>
<div id="formsuserALL">
<%= form_tag edit_individual_users_path do %>
<div id="submituserALL">
<%= submit_tag "Edit All Users" %> or <%= link_to "Admin Page", admin_index_path %>
<p></p>
</div>
</div>
<% @usersummary.each do |usersummary| %>
<h2></h2>
<div id='usercontainermain'>
<div id='usersummarymain'>
User Summary
<p>Travel Squaders <%= usersummary.travel %><br/>
Dress Squaders <%= usersummary.dress %><br/>
B-Squaders <%= usersummary.bsquad %><br/>
Managers <%= usersummary.mngr %><br/>
Not Knowns <%= usersummary.notknown %><br/>
Admins <%= usersummary.adminum %></p>
</div>
</div>
<% end %>
<table border='1'>
  <tr>
    <th width='15%'>Name</th>
    <th>Status</th>
    <th>Role</th>
    <th width='15%'>Email</th>
    <th>Last Time Signed In</th>
    <th>Confirmed Date</th>  
  </tr>
<% @users.each do |user| %>
  <tr>
    <td align='center'><%= user.fullname %></td>
    <td align= 'center'><%= user.status.status_name %></td>
    <td align= 'center'><%= user.rolecap %></td>
    <td align='center'><%= user.email %></td>
    <td align='center'><%= user.last_sign_in_at %></td>
    <td align='center'><%= user.confirmed_at %></td>
    <td><%= link_to 'Remove', user, :method => :delete %></td>   
 </tr>
  <% end %>
	</table>	
<br />
</div>
<% end %>

<% else %>
<title>Unauthorized Access</title>
<h3 align='center'>Unauthorized Access</h3>
<div id="adminError"><p>You Are Not Authorized To View This Page!</p></div>
<div id="submit">
<%= link_to 'Get Me Out', root_path %>
</div>
<% end %>

